doctype html
html
  head
    title Edit Task
    link(rel="stylesheet", href="styles.css")
  body
    main
      h1 Edit Task
      form(action="/crud/editItem/#{task.id}", method="POST")
        div
          label(for="name") Name:
          input(type="text", id="name", name="name", value=task.name, required)
        div
          label(for="description") Description:
          textarea(id="description", name="description", required) #{task.description}
        div
          label(for="priority") Priority:
          input(type="number", id="priority", name="priority", value=task.priority, required)
        div
          label(for="deadline") Deadline:
          input(type="date", id="deadline", name="deadline", value=task.deadline, required)
        div
          label(for="status") Status:
          select(id="status", name="status", required)
            option(value="Pending", selected=task.status === "Pending") Pending
            option(value="In Progress", selected=task.status === "In Progress") In Progress
            option(value="Completed", selected=task.status === "Completed") Completed
        div
          button(type="submit") Save Changes